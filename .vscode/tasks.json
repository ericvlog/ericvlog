{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Hugo Site to ericvlog_site",
            "type": "shell",
            "command": "hugo",
            "args": [
                "-d",
                "../ericvlog_site"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Task for building the Hugo site with output directory ../ericvlog_site."
        },
        {
            "label": "Commit and Push to GitHub",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-Command",
                "cd ../ericvlog_site ; git add . ; git commit -m 'Auto-commit from build task' ; git push ; cd ../ericvlog ; git add . ; git commit -m 'Auto-commit from build task' ; git push"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task for committing and pushing changes to GitHub."
        },
        {
            "label": "Build and Deploy",
            "dependsOn": [
                "Build Hugo Site to ericvlog_site",
                "Commit and Push to GitHub"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
